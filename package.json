{
	"name": "telegraf-inline-menu",
	"version": "6.2.0",
	"description": "Inline Menus for Telegraf made simple.",
	"main": "dist/source",
	"types": "dist/source",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"preexample-js": "npm run build",
		"example-js": "node examples/main-javascript.js",
		"start": "ts-node examples/main-typescript.ts",
		"test": "tsc && xo && nyc ava"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EdJoPaTo/telegraf-inline-menu.git"
	},
	"keywords": [
		"Telegraf",
		"Telegram",
		"keyboard",
		"button",
		"menu",
		"stateless",
		"middleware"
	],
	"author": {
		"name": "EdJoPaTo",
		"email": "telegraf-inline-menu-npm-package@edjopato.de",
		"url": "https://EdJoPaTo.de"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/EdJoPaTo/telegraf-inline-menu/issues"
	},
	"homepage": "https://github.com/EdJoPaTo/telegraf-inline-menu#readme",
	"dependencies": {
		"typegram": "^3.0.2"
	},
	"peerDependencies": {
		"telegraf": "^4.0.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.9.0",
		"@types/node": "^14.0.4",
		"ava": "^3.6.0",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"telegraf": "^4.0.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.2.0",
		"xo": "^0.38.1"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"nyc": {
		"all": true,
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"@typescript-eslint/dot-notation": "off",
			"ava/no-ignored-test-files": "off",
			"camelcase": "off"
		},
		"overrides": [
			{
				"files": [
					"examples/**/*.*",
					"source/**/*.test.ts",
					"test/**/*.ts"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off",
					"max-params": "off"
				}
			}
		]
	}
}
